DATABASE_URL=postgresql://quiz_user:dev_password@localhost:5432/quiz_db
SERVER_HOST=0.0.0.0
RUST_LOG=info,quiz_service=debug
SERVER_PORT=8080
ACT=true




# ============================================
# DATABASE PASSWORDS
# ============================================
AUTH_DB_PASSWORD=auth_secret_dev_change_me
SUBSCRIPTION_DB_PASSWORD=subscription_secret_dev_change_me
OFFLINE_DB_PASSWORD=offline_secret_dev_change_me
ADS_DB_PASSWORD=ads_secret_dev_change_me
QUIZ_DB_PASSWORD=quiz_secret_dev_change_me

# ============================================
# JWT SECRETS
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_min_32_characters_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_characters_change_in_production

# ============================================
# GOOGLE OAUTH
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# APPLE SIGN IN
# ============================================
# Get from: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=com.yourapp.signin
APPLE_TEAM_ID=YOUR_TEAM_ID

# ============================================
# APPLE IAP (In-App Purchases)
# ============================================
# Get from: https://appstoreconnect.apple.com
APPLE_SHARED_SECRET=your_shared_secret_for_iap_receipts
APPLE_BUNDLE_ID=com.yourapp.bundle

# ============================================
# GOOGLE IAP (In-App Purchases)
# ============================================
# Service account JSON from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# ============================================
# ADMOB (Advertising)
# ============================================
# Get from: https://admob.google.com
ADMOB_APP_ID=ca-app-pub-0000000000000000~0000000000
ADMOB_PUBLISHER_ID=pub-0000000000000000

# ============================================
# APPLICATION CONFIG
# ============================================
APP_ENV=development
LOG_LEVEL=debug

